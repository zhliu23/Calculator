<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="480" Height="720">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:ConnectionId='1' 
            IsReadOnly="True"
            x:Name="Display" 
            FontSize="60"
            Margin="10,70,10,0" 
            TextWrapping="Wrap" 
            Text="Testing" 
            VerticalAlignment="Top" 
            Height="100" 
            Grid.Row="1"
            TextAlignment="Right"/>

        <Button x:ConnectionId='2' 
                                  
            x:Name="clearBtn" 
            Content="C" 
            HorizontalAlignment="Left" 
            Margin="20,200,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="210"/>

        <Button x:ConnectionId='3' 
                                   
            x:Name="numDelBtn" 
            Content="Delete" 
            HorizontalAlignment="Left" 
            Margin="240,200,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='4' 
                                   
            x:Name="numDivBtn" 
            Content="/" 
            HorizontalAlignment="Left" 
            Margin="350,200,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='5' 
                                 
            x:Name="num7Btn" 
            Content="7" 
            HorizontalAlignment="Left" 
            Margin="20,300,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='6' 
                                 
            x:Name="num8Btn" 
            Content="8" 
            HorizontalAlignment="Left" 
            Margin="130,300,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='7' 
                                 
            x:Name="num9Btn" 
            Content="9" 
            HorizontalAlignment="Left" 
            Margin="240,300,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='8' 
                                   
            x:Name="numMulBtn" 
            Content="x" 
            HorizontalAlignment="Left" 
            Margin="350,300,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='9' 
                                 
            x:Name="num4Btn" 
            Content="4" 
            HorizontalAlignment="Left" 
            Margin="20,400,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='10' 
                                 
            x:Name="num5Btn" 
            Content="5" 
            HorizontalAlignment="Left" 
            Margin="130,400,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='11' 
                                 
            x:Name="num6Btn" 
            Content="6" 
            HorizontalAlignment="Left" 
            Margin="240,400,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='12' 
                                   
            x:Name="numSubBtn" 
            Content="-" 
            HorizontalAlignment="Left" 
            Margin="350,400,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='13' 
                                 
            x:Name="num1Btn" 
            Content="1" 
            HorizontalAlignment="Left" 
            Margin="20,500,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='14' 
                                 
            x:Name="num2Btn" 
            Content="2" 
            HorizontalAlignment="Left" 
            Margin="130,500,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='15' 
                                 
            x:Name="num3Btn" 
            Content="3" 
            HorizontalAlignment="Left" 
            Margin="240,500,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='16' 
                                   
            x:Name="numAddBtn" 
            Content="+" 
            HorizontalAlignment="Left" 
            Margin="350,500,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='17' 
                                    
            x:Name="numSignBtn" 
            Content="+/-" 
            HorizontalAlignment="Left" 
            Margin="20,600,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='18' 
                                 
            x:Name="num0Btn" 
            Content="0" 
            HorizontalAlignment="Left" 
            Margin="130,600,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='19' 
                                   
            x:Name="numdotBtn" 
            Content="." 
            HorizontalAlignment="Left" 
            Margin="240,600,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <Button x:ConnectionId='20' 
                                  
            x:Name="numEqBtn" 
            Content="=" 
            HorizontalAlignment="Left" 
            Margin="350,600,0,0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Top" 
            Height="60" 
            Width="100"/>

        <TextBlock x:ConnectionId='21' 
            x:Name="textBlock" 
            HorizontalAlignment="Left" 
            TextAlignment="Center"
            FontSize="40"
            Margin="10,10,0,0" 
            Grid.RowSpan="2" 
            TextWrapping="Wrap" 
            Text="Standard Calculator" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="0.145,0.425" 
            Height="55" 
            Width="460"/>



    </Grid>
</Page>

